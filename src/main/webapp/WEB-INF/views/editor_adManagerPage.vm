<!DOCTYPE html>
<html>
<head>
<title></title>
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<link href="../css/easyui.css" type="text/css" rel="stylesheet" />
<link href="../css/icon.css" type="text/css" rel="stylesheet" />
<script type="text/javascript" src="../js/jquery-1.11.3.js"></script>
<script type="text/javascript" src="../js/jquery.easyui.min.js"></script>
<script type="text/javascript" src="../js/easyui-lang-zh_CN.js"></script>
</head>
<script>
	$(function(){
		$('#submit').click(function(){
			$('form').submit();
		});
		
		// 表格数据源  
        var data = [];  
        var rows = $('#table').datagrid('getRows');
        for(var i=0;i<rows.length;i++) {
        	 data.push({  
                 "concilName":rows[i].concilName,  
                 "adName":rows[i].adName,
                 "trialNo":rows[i].trialNo,  
                 "adType":rows[i].adType,
                 "createTime":rows[i].createTime,
                 "startTime":rows[i].startTime,  
                 "endTime":rows[i].endTime,
                 "a8":rows[i].a8
             }) ; 
		}
        $("#table").datagrid("loadData", data.slice(0, 5));
        var pager = $("#table").datagrid("getPager");  
        pager.pagination({  
            total:data.length, 
            pageSize:5,
            pageList: [5,10,15,20],
            onSelectPage:function (pageNo, pageSize) {  
                var start = (pageNo - 1) * pageSize;  
                var end = start + pageSize;  
                $("#table").datagrid("loadData", data.slice(start, end));  
                pager.pagination('refresh', {  
                    total:data.length,  
                    pageNumber:pageNo
                });  
            }  
        });  
	});

</script>
<body>
	<div id="articleInfos">
		<form action="../editor/toAdManagerPage" method="POST">
			<table>
				<tr>
					<td>广告名称：</td>
					<td><input class="easyui-textbox" type="text" name="adName" value=""></td>
					<td>理事会名称：</td>
					<td><input class="easyui-textbox" type="text" name="concilName" value=""></td>
					<td>理事会类型：</td>
					<td><select name="concilType"  class="easyui-combobox"  style="width:155px;">
						<option value="" selected>全部</option>
						<option value="">理事长</option>
					</select></td>
				</tr>
				<tr>
					<td>广告类型：</td>
					<td><select name="adType" class="easyui-combobox"  style="width:155px;">
						<option value="" selected>全部</option>
						<option value="">形象类</option>
					</select></td>
					<td>广审号：</td>
					<td><input class="easyui-textbox" type="text" name="trialNo" value=""></td>
					<td>注册时间：</td>
					<td><input class="easyui-textbox" type="text" name="registTime" value=""></td>
				</tr>
				<tr>
					<td>合同开始时间：</td>
					<td ><input class="easyui-textbox" type="text" name="contractStartTime" value=""></td>
					<td>合同结束时间：</td>
					<td><input class="easyui-textbox" type="text" name="contractEndTime" value=""></td>
				</tr>
				<tr>
					<td colspan="6">
						<a  class="easyui-linkbutton"   style="width:50px;" href="#"  id="submit">查询</a>
					</td>
				</tr>
			</table>
		</form>
		<table   id="table"  class="easyui-datagrid"   data-options="singleSelect:true,toolbar:'#bt',pagination:true">
			<thead>
				<tr>
					<th data-options="field:'concilName',width:200">理事会名称</th>
					<th data-options="field:'adName',width:200">广告名称</th>
					<th data-options="field:'trialNo',width:100">广审号</th>
					<th data-options="field:'adType',width:100">广告类型</th>
					<th data-options="field:'createTime',width:100">注册时间</th>
					<th data-options="field:'startTime',width:100">合同开始时间</th>
					<th data-options="field:'endTime',width:100">合同结束时间</th>
					<th data-options="field:'option',width:100">操作</th>
				</tr>
			</thead>
			<tbody>
			#foreach($dtos in ${list})   
				<tr>
					<td>${dtos.concilName}</td>
					<td>${dtos.adName}</td>
					<td>${dtos.trialNo}</td>
					<td>${dtos.adType}</td>
					<td>${dtos.createTime}</td>
					<td>${dtos.startTime}</td>
					<td>${dtos.endTime}</td>
					<td><a class="easyui-linkbutton"  style="width:50px;" href="../editor/toQrySingleAdInfo?adId=111">编辑</a></td>
				</tr>
			#end
			</tbody>
		</table>
		<br>
	</div>
</body>
</html>
