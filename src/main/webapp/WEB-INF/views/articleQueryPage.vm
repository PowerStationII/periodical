<!DOCTYPE html>
<html>
<head>
<title></title>
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<link href="../css/easyui.css" type="text/css" rel="stylesheet" />
<link href="../css/icon.css" type="text/css" rel="stylesheet" />
<script type="text/javascript" src="../js/jquery-1.11.3.js"></script>
<script type="text/javascript" src="../js/jquery.easyui.min.js"></script>
<script type="text/javascript" src="../js/easyui-lang-zh_CN.js"></script>
</head>
<script type="text/javascript">
	$(function(){
		// 表格数据源  
        var data = [];  
        var rows = $('#table').datagrid('getRows');
        for(var i=0;i<rows.length;i++) {
        	 data.push({  
                 "articleId":rows[i].articleId,  
                 "title":rows[i].title,
                 "contriTime":rows[i].contriTime,  
                 "authorState":rows[i].authorState,
                 "option":rows[i].option
             }) ; 
		}
        $("#table").datagrid("loadData", data.slice(0, 5));
        var pager = $("#table").datagrid("getPager");  
        pager.pagination({  
            total:data.length, 
            pageSize:5,
            pageList: [5,10,15,20],
            onSelectPage:function (pageNo, pageSize) {  
                var start = (pageNo - 1) * pageSize;  
                var end = start + pageSize;  
                $("#table").datagrid("loadData", data.slice(start, end));  
                pager.pagination('refresh', {  
                    total:data.length,  
                    pageNumber:pageNo
                });  
            }  
        });  
	});
	function yijian(value) {
		$.ajax({
				url:'../author/toOpinionQueryPage',
				data:{articleId:value},
				type:'POST',
				success:function(res){
					if (res=='null') {
						$.messager.alert('审稿意见','无');    
					}
					else {
						$.messager.alert('审稿意见',eval('(' + res + ')').opinion); 
					}
				}	
		});
	}
</script>
<body>
	<div id="articleInfos"  style="margin-top:50px;">
		<table  id="table"  class="easyui-datagrid"   data-options="singleSelect:true,toolbar:'#bt',pagination:true">
			<thead>
				<tr>
					<th data-options="field:'articleId',width:267">稿件编号</th>
					<th data-options="field:'title',width:200">稿件标题</th>
					<th data-options="field:'contriTime',width:200">投稿时间</th>
					<th data-options="field:'authorState',width:200">稿件状态</th>
					<th data-options="field:'option',width:200">备注信息</th>
				</tr>
			</thead>
			<tbody>
				#foreach($dtos in ${list})   
				<tr>
					<td>$!{dtos.articleId}</td>
					<td><a href="../author/toArticleQueryDetailPage?articleId=${dtos.articleId}">$!{dtos.title}</a></td>
					<td>$!{dtos.contriTime}</td>
					<td>$!{dtos.authorState}</td>
					<td><a onclick="yijian('${dtos.articleId}')" href="#" class="easyui-linkbutton" >查看审稿意见</a></td>
				</tr>
				#end
			</tbody>
		</table>
		<br>
	</div>
</body>
</html>
