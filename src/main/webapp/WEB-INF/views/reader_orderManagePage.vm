<script type="text/javascript" src="../js/easyui-lang-zh_CN.js"></script>
</head>
<script type="text/javascript">
	$(function(){
		
	});
	function yijian(value) {
		$.ajax({
				url:'../reader/queryOpinion',
				data:{orderNo:value},
				type:'POST',
				success:function(res){
					if (res=='null' || res=='') {
						alert('无');
					}
					else {
						alert(res);
						//alert(eval('(' + res + ')').opinion);
					}
				}	
		});
	}
	//文件下载
	 function import_download () {
		 var fileName = 'dinggouzhinan.png';//文件名称
		 var filePath = "E:\\temp\\";//文件路径
	   	 var htmlUrl = "../reader/download?fileName="+fileName+"&filePath="+filePath;
		 $("#saveImg").attr("src",htmlUrl);
	 }
</script>
<body>
	<div id="articleInfos">
		<div><span style="font-size:20">订单管理</span></div>
		<table style="border: 1px solid black;" rules="all">
			<tr>
				<td>订单编号</td>
				<td>订购年份</td>
				<td>数量</td>
				<td>金额</td>
				<td>提交日期</td>
				<td>审核日期</td>
				<td>银行汇票凭证</td>
                <td>操作</td>
			</tr>
            #foreach($dtos in ${list})
                <tr>
                    <td>$!{dtos.orderNo}</td>
                    <td>$!{dtos.pYear}</td>
                    <td>$!{dtos.subNums}</td>
                    <td>$!{dtos.amount}</td>
                    <td>$!{dtos.submitTime}</td>
                    <td>$!{dtos.auditTime}</td>
                    <td>上传</td>
                    <td><a href="../reader/toOrderPayPage?orderNo=$!{dtos.orderNo}">订费登记</a>  <a onclick="yijian('$!{dtos.orderNo}')">查看审核信息</a></td>
                </tr>
            #end
		</table>
		<a href="../reader/toCreatOrderPage">新建订单</a>
		<a onclick="import_download()">下载订购指南</a>
		<iframe height="0" width="0"  name="saveImg" id="saveImg"></iframe>
		<br>
	</div>
</body>
</html>
