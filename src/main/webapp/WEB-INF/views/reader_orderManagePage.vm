<!DOCTYPE html>
<html>
<head>
<title></title>
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<link href="../css/easyui.css" type="text/css" rel="stylesheet" />
<link href="../css/icon.css" type="text/css" rel="stylesheet" />
<script type="text/javascript" src="../js/jquery-1.11.3.js"></script>
<script type="text/javascript" src="../js/jquery.easyui.min.js"></script>
<script type="text/javascript" src="../js/easyui-lang-zh_CN.js"></script>
</head>
<script type="text/javascript">
	$(function(){
		
	});
	function yijian(value) {
		$.ajax({
				url:'../reader/queryOpinion',
				data:{orderNo:value},
				type:'POST',
				success:function(res){
					if (res=='null' || res=='') {
						alert('无');
					}
					else {
						alert(res);
						//alert(eval('(' + res + ')').opinion);
					}
				}	
		});
	}
	//文件下载
	 function import_download () {
		 var fileName = 'dinggouzhinan.png';//文件名称
		 var filePath = "E:\\temp\\";//文件路径
	   	 var htmlUrl = "../reader/download?fileName="+fileName+"&filePath="+filePath;
		 $("#saveImg").attr("src",htmlUrl);
	 }
	
	 function OpenFrame() {
		 $('#dFrame').remove();
         $('#address').append("<iframe id='dFrame' style='width:100%;height:100%'src='toDistribution'></iframe>");
         $('#address').window('open');

     }
</script>
<body>
	<div id="articleInfos">
		<div id="bt"  style="height:30px;line-height:30px;">订单管理</div>
		<table class="easyui-datagrid" data-options="singleSelect:true,toolbar:'#bt'">
			<thead> 
				<tr>
					<th data-options="field:'orderNo',width:130">订单编号</th>
					<th data-options="field:'pYear',width:100">订购年份</th>
					<th data-options="field:'subNums',width:100">数量</th>
					<th data-options="field:'amount',width:130">金额</th>
					<th data-options="field:'submitTime',width:100">提交日期</th>
					<th data-options="field:'auditTime',width:100">审核日期</th>
					<th data-options="field:'upload',width:130">银行汇票凭证</th>
	                <th data-options="field:'option',width:220">操作</th>
				</tr>
			</thead>
			<tbody>
            #foreach($dtos in ${list})
                <tr>
                    <td>$!{dtos.orderNo}</td>
                    <td>$!{dtos.pYear}</td>
                    <td>$!{dtos.subNums}</td>
                    <td>$!{dtos.amount}</td>
                    <td>$!{dtos.submitTime}</td>
                    <td>$!{dtos.auditTime}</td>
                    <td>上传</td>
                    <td>
                    	<a href="../reader/toOrderPayPage?orderNo=$!{dtos.orderNo}" class="easyui-linkbutton" data-options="">订费登记</a> 
                    	<a href="#"  onclick="OpenFrame()" class="easyui-linkbutton" data-options="">编辑订单</a>
                    	<a href="#"  onclick="yijian('$!{dtos.orderNo}')" class="easyui-linkbutton" data-options="">查看审核信息</a> 
                    </td>
                </tr>
            #end
            </tbody>
		</table>
		<a href="../reader/toCreatOrderPage"  class="easyui-linkbutton" data-options="">新建订单</a> 
		<a href="#"  onclick="import_download()" class="easyui-linkbutton" data-options="">下载订购指南</a> 
		<iframe height="0" width="0"  name="saveImg" id="saveImg"  style="display:none;"></iframe>
		<br>
		<div id="address"  class="easyui-window" title="地址信息"  closed="true" style="width:600px;height:480px;padding:5px;"></div>
	</div>
</body>
</html>
