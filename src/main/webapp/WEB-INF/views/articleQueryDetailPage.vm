<!DOCTYPE html>
<html>
<head>
<title></title>
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<link href="../css/easyui.css" type="text/css" rel="stylesheet" />
<link href="../css/icon.css" type="text/css" rel="stylesheet" />
<script type="text/javascript" src="../js/jquery-1.11.3.js"></script>
<script type="text/javascript" src="../js/jquery.easyui.min.js"></script>
<script type="text/javascript" src="../js/easyui-lang-zh_CN.js"></script>
</head>
<script>
	$(function(){
		$('#back').click(function(){
			history.go(-1);
		});
	});
	function yijian(value) {
		$.ajax({
				url:'../author/toOpinionQueryPage',
				data:{articleId:value},
				type:'POST',
				success:function(res){
					if (res=='null') {
						$.messager.alert('审稿意见','无');    
					}
					else {
						$.messager.alert('审稿意见',eval('(' + res + ')').opinion); 
					}
				}	
		});
	}
</script>
<body>
	<div>
		<table class="easyui-datagrid"   data-options="singleSelect:true" >
		<thead>
			<tr>
				<th data-options="field:'name',width:200"></th>
				<th data-options="field:'value',width:867"></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>稿件状态：</td>
				<td>$!{detail.articleId}</td>
			</tr>
			<tr>
				<td>中文标题：</td>
				<td>$!{detail.articleCnTitle}</td>
			</tr>
			<tr>
				<td>英文标题：</td>
				<td>$!{detail.articleEnTile}</td>
			</tr>
			<tr>
				<td>中国分类号：</td>
				<td>$!{detail.cNums}</td>
			</tr>
			<tr>
				<td>拟投栏目：</td>
				<td>$!{detail.section}</td>
			</tr>
			<tr>
				<td>中文关键词：</td>
				<td>$!{detail.articleCnKeywords}</td>
			</tr>
			<tr>
				<td>英文关键词：</td>
				<td>$!{detail.articleEnKeywords}</td>
			</tr>
			<tr>
				<td>中文摘要：</td>
				<td>$!{detail.articleCnSummary}</td>
			</tr>
			<tr>
				<td>英文摘要：</td>
				<td>$!{detail.articleEnSummary}</td>
			</tr>
			<tr>
				<td>审批稿件下载：</td>
				<td>$!{detail.attachmentName}<a href="#" class="easyui-linkbutton" data-options="width:50">下载</a>$!{detail.attachmentPath}</td>
			</tr>
			<tr>
				<td>专家审稿：</td>
				<td>审稿专家:$!{detail.expertName} 送审时间:$!{detail.dealStartTime} <a onclick="yijian('$!{detail.articleId}')" href="#" class="easyui-linkbutton" >查看审稿意见</a></td>
			</tr>
			</tbody>
		</table>
	</div>
	<div class="attr_con">
		<a id="back" href="#" class="easyui-linkbutton" data-options="width:50">返回</a>
		<!-- <a id="back" href="#" class="easyui-linkbutton" data-options="width:50">重投</a> --><!-- 如果稿件状态是返修,此按钮需要显示 -->
	</div>
</body>
</html>
